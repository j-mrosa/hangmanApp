<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hangmanApp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Hangman</name>
    <description>Sample Apache Cordova App</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <platform name="android">
      <icon src="www/img/icon.png" platform="android" width="147" height="147" density="mdpi"/>  
      <splash src="res/screen/android/splashscreen.png" density="hdpi"/>
      <splash src="res/screen/android/splashscreen.png" density="ldpi"/>
      <splash src="res/screen/android/splashscreen.png" density="mdpi"/>
      <splash src="res/screen/android/splashscreen.png" density="xhdpi"/>
      <splash src="res/screen/android/splashscreen.png" density="xxhdpi"/>
      <!-- <splash src="res/screen/android/splashscreen-50.png" /> -->    
      <preference name = "SplashScreen" value = "screen" />
      <preference name = "SplashScreenDelay" value = "2000" />
      <preference name="SplashMaintainAspectRatio" value="true" />
    <!-- <preference name="KeepRunning" value="true"/> -->
    </platform>
    <platform name="browser">
      <preference name = "SplashScreenDelay" value = "0" />
    </platform>
</widget>
